<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/distanza_card_viaggio"
    android:layout_marginRight="@dimen/distanza_card_viaggio"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center|center_horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_posto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:button="@drawable/custom_checkbox" />

        <TextView
            android:id="@+id/nome_posto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        </LinearLayout>
        <ImageButton android:id="@+id/button_popup_item_posto"
            style="?android:borderlessButtonStyle"
            android:layout_width="@dimen/standard_touch_target_size"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_more_vert_grey600_18dp"
            android:contentDescription="@string/info" />

    </LinearLayout>
</android.support.v7.widget.CardView>