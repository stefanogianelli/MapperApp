<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="260dp"
    android:layout_height="140dp">


    <com.stefano.andrea.utils.ScaleImageView
        android:id="@+id/dm_foto"
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"/>
    
    <View
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:background="@color/background_dialogo_marker"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" >
        <TextView android:id="@+id/dm_nome"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dm_dettagli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="18sp"
            android:text="Dettagli >"
            android:textColor="@color/white"
            android:paddingRight="16dp"
            android:background="?android:selectableItemBackground"
            android:layout_weight="1" />
    </LinearLayout>


        <TextView style="?android:titleTextStyle"
            android:id="@+id/dm_count_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/df_margin_h"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>
</FrameLayout>