<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView  style="?android:textAppearanceLargeInverse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_header_height"
        android:gravity="center_vertical"
        android:background="@color/dialog_header_bckg"
        android:text="@string/aggiungi_citta"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/dialog_header_padding_left"/>
    <EditText
        android:id="@+id/autocomplete_citta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/black"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:inputType="textCapSentences|textAutoCorrect"
        android:hint="@string/add_citta" />
    <ListView
        android:id="@+id/autocomplete_suggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>