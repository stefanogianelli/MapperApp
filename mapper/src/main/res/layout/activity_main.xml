<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/elenco_viaggi"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding_card_viaggio"
        android:paddingRight="@dimen/padding_card_viaggio"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab_aggiunta_viaggio"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/fab_margin_bottom"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:src="@drawable/fab_icons"
        fab:fab_colorNormal="@color/fab_color_normal"
        fab:fab_colorPressed="@color/fab_color_pressed"
        android:onClick="openDialogAddViaggio"/>

</RelativeLayout>


