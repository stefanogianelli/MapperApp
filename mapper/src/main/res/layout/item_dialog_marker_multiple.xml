<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dmm_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/df_margin_v"
        android:paddingBottom="@dimen/df_margin_v"
        android:paddingRight="@dimen/imm_internal_h_dist"
        android:paddingLeft="@dimen/imm_internal_h_dist"
        android:paddingStart="@dimen/imm_internal_h_dist"
        android:paddingEnd="@dimen/imm_internal_h_dist"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dmm_immagine"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:border_width="1dp"
            app:border_color="@color/grey"/>

        <TextView style="?android:subtitleTextStyle"
            android:id="@+id/dmm_titolo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:layout_weight="5"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="@dimen/df_btn_margin_v"
            android:paddingBottom="@dimen/df_btn_margin_v"
            android:textColor="@color/black"
            android:text="Roma"
            android:gravity="start" />

        <ImageView
            android:id="@+id/dmm_dettagli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/verydark_grey"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="@dimen/df_btn_margin_v"
            android:paddingBottom="@dimen/df_btn_margin_v"
            android:src="@drawable/ic_chevron_right_grey600_48dp"
            android:contentDescription="@string/dettagli"/>
    </LinearLayout>

