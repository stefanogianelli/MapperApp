<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Action Bar -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/dark_orange</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <!-- android:textColorSecondary is the color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="popupTheme">@style/Toolbar_Popup</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <!-- Action Mode theme -->
        <item name="android:actionModeBackground">@color/orange</item>
        <item name="actionModeBackground">@color/orange</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- Actionbar menu text color -->
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <!-- Animazione popup menu -->
        <item name="android:popupAnimationStyle">@style/popupAnimation</item>

    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <!--<item name="android:background">@color/orange</item>-->
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/popup_background</item>
    </style>

    <style name="TextWithShadow">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowColor">@color/transparent_grey</item>
        <item name="android:shadowDx">-6</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:maxWidth">240dp</item>
    </style>

    <style name="FrecciaSuggerimento">
        <item name="android:layout_marginLeft">160dp</item>
    </style>

    <style name="subTitleContainer">
        <item name="android:height">@dimen/default_subtitle_container_height</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/verydark_grey</item>
    </style>

    <style name="popupAnimation">
        <item name="android:windowEnterAnimation">@anim/popu_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

</resources>
